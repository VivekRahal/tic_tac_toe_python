# Backend environment configuration

# JWT settings
JWT_SECRET=change-me
JWT_EXP_DAYS=7

# One-time admin seed secret (set to a random string)
SEED_ADMIN_SECRET=change-this-secret

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=ukrics

# Ollama
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llava:7b

# OpenAI (optional)
# Set OPENAI_API_KEY to enable the OpenAI provider in /api/scan (provider=openai)
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# ElevenLabs (optional)
# Set ELEVENLABS_API_KEY to enable /api/tts
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=Rachel
ELEVENLABS_MODEL_ID=eleven_multilingual_v2

# Google OAuth 2.0 (set your own credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth via backend host:8000 (frontend redirects back to 5173 after success)
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback
OAUTH_POST_LOGIN_REDIRECT=http://localhost:5173/login

# JWT
JWT_SECRET=change-me
JWT_EXP_DAYS=7
